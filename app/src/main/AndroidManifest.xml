<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.belstu.teya.game01">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:requestLegacyExternalStorage="true"

        android:theme="@style/Theme.Game01">
        <activity android:name=".battle.GameOverScreen"></activity>
        <activity android:name=".battle.BattleWinScreen" />
        <activity android:name=".ShopScreen" />
        <activity android:name=".battle.BattleScreen" />
        <service android:name=".BGMservice.BGMservice"
            android:enabled="true"
            android:exported="true"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>