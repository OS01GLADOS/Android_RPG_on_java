<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shop_item_layout">

    <TextView
        android:id="@+id/ItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ItemName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/ItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="ItemPrice"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ItemName" />

    <TextView
        android:id="@+id/ItemValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ItemValue"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/ItemName"
        app:layout_constraintTop_toTopOf="@+id/ItemType" />

    <TextView
        android:id="@+id/ItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:text="ItemType"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ItemValue"
        app:layout_constraintTop_toBottomOf="@+id/ItemName" />

</androidx.constraintlayout.widget.ConstraintLayout>